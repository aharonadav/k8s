pipeline {
    agent {
     kubernetes {
      //cloud 'kubernetes'
      yaml """
        apiVersion: v1
        kind: Pod
        spec:
          containers:
          - name: docker
            image: docker:latest
            command: ['cat']
            tty: true
            privileged: true
            volumeMounts:
                - name: dockersock
                  mountPath: /var/run/docker.sock
          volumes:
          - name: dockersock
            hostPath:
                path: /var/run/docker.sock
        """
    }
  }
  stages {
      stage('Run docker') {
          steps {
              container('docker') {
                  sh 'docker --version'
              }
          }
      }
  }
}